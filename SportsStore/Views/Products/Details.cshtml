@model SportsStore.Models.Product

@{
    ViewBag.Title = "Produkt";
}
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Acme|Antic+Slab|Boogaloo|Josefin+Sans:400,700,700i|Kavivanar|Poppins:400,600,600i,700,700i|Raleway:400,600,600i,700,700i,800,800i" rel="stylesheet">
    <link href="~/Content/SkryptyOli.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
</head>
<h2 style="font-family: Poppins; font-weight:700;">Szczegóły produktu</h2>

<div>
    <hr />
    <table class="table table-bordered col-lg-8">
        <tr>
            <th style="background-color:#323232;color:white; width:30px;">
                Nazwa produktu
            </th>
            <th>
                @Html.DisplayFor(model => model.Name)
            </th>
        </tr>
        <tr>
            <th style="background-color:#323232; color:white; width:30px;">
               Cena
            </th>
            <th>
                @Html.DisplayFor(model => model.Price)
            </th>
        </tr>
        <tr>
            <th style="background-color:#323232; color:white; width:30px;">
                Zdjęcie
            </th>
            <th>
                <img src="@Model.Picture" />
            </th>
        </tr>
        <tr>
            <th style="background-color:#323232; color:white; width:30px;">
                Ukryty
            </th>
            <th>
                @(Model.Hidden ? "Tak" : "Nie")
            </th>
        </tr>
        <tr>
            <th style="background-color:#323232; color:white; width:30px;">
                Producent
            </th>

            <th>
                @Html.DisplayFor(model => model.Producer)
            </th>
        </tr>
        <tr>
            <th style="background-color:#323232; color:white; width:30px;">
                Nazwa kategorii
            </th>

            <th>
                @Html.DisplayFor(model => model.Category.Name)
            </th>
        </tr>
        <tr>
            <th style="background-color:#323232; color:white; width:30px;">
                Krótki opis
            </th>

            <th>
                @Html.DisplayFor(model => model.ShortDescription)
            </th>
        </tr>
        <tr>
            <th style="background-color:#323232; color:white; width:30px;">
                Opis
            </th>

            <th>
                @Html.Raw(Model.Description)
            </th>
        </tr>
    </table>
</div>
<p>
    @if (User.IsInRole("admin"))
    {
        @Html.ActionLink("Edytuj", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
    }
   
    @Html.ActionLink("Powrót to listy produktów", "List","Store", null, new { @class = "btn btn-primary" })
</p>
