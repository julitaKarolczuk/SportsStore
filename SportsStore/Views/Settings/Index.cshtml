@model SportsStore.ViewModels.SettingsViewModel

@{
    ViewBag.Title = "Ustawienia";
}
<h2>Ustawienia aplikacji</h2>
@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="control-label col-md-2">
            <label>Email kontaktowy</label>
        </div>
        <div class="col-md-10">
            <input value="@Model.ContactEmail.Value" class="form-control" id="Email" name="Email" />
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">
            <label>Email aplikacji</label>
        </div>
        <div class="col-md-10">
            <input value="@Model.ApplicationEmail.Value" class="form-control" id="ApplicationEmail" name="ApplicationEmail" />
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">
            <label>Hasło aplikacji</label>
        </div>
        <div class="col-md-10">
            <input value="@Model.ApplicationEmailPassword.Value" type="password" class="form-control" id="ApplicationEmailPassword" name="ApplicationEmailPassword" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Zapisz" class="btn btn-default" />
        </div>
    </div>
}