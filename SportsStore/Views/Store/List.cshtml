
@{
    ViewBag.Title = "Sports Store";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-2">
        @Html.Action("CategoriesMenu")
    </div>
    <div class="col-md-10">
        <section>
            <ul>
                @foreach (var product in Model)
                {
                    <li>
                        <article>
                            <a class="alert-link warning cartLogo" href="@Url.Action("AddToCart", "Cart", new { id = product.Id})">
                                <img class="card-icon" src="~/Images/cartIcon.png" /><br />
                            </a>
                            <a href="@Url.Action("Details","Store", new { id = product.Id})">
                                <div>
                                    <img class="productImg" src="@Url.Content(product.Picture)">
                                </div>
                                <h5>
                                    @product.Producer - @product.Name
                                </h5>
                            </a>
                        </article>
                    </li>
                }
            </ul>
        </section>
    </div>
</div>

