@model IEnumerable<SportsStore.Models.Order>
@{
    ViewBag.Title = "Zamowienia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Acme|Antic+Slab|Boogaloo|Josefin+Sans:400,700,700i|Kavivanar|Poppins:400,600,600i,700,700i|Raleway:400,600,600i,700,700i,800,800i" rel="stylesheet">
    <link href="~/Content/SkryptyOli.css" rel="stylesheet" />
    <link href="~/Content/doTabeli.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
</head>

<h2>Wszystkie zamówienia</h2>

<table class="table table-bordered">
    <tr class="wiersz1">
        <th class="th2">
            Zamawiający
        </th>
        <th class="th2">
            Status
        </th>
        <th class="th2">
            Metoda płatności
        </th>
        <th class="th2">
            Sposób dostawy
        </th>
        <th class="th2">
            Adres dostawy
        </th>
        <th>
            Data zamóienia
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.OrderByDescending(i => i.CreationDate))
    {
        <tr>
            <td>
                @item.AspNetUser.FirstName @item.AspNetUser.LastName (@item.AspNetUser.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shipment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @item.CreationDate.ToString()
            </td>
            <td>
                @Html.ActionLink("Szczegóły zamówienia", "DetailsAdmin", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Edycja", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }


</table>
