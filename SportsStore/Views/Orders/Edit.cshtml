@model SportsStore.Models.Order

@{
    ViewBag.Title = "Edycja";
}

<head>
    <link href="~/Content/MainLayout.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Acme|Antic+Slab|Boogaloo|Josefin+Sans:400,700,700i|Kavivanar|Poppins:400,600,600i,700,700i|Raleway:400,600,600i,700,700i,800,800i" rel="stylesheet">
</head>

<h2 style="font-family: Poppins; font-weight:700; text-align: center;">Edycja</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="control-label col-md-2">
                <label>Status zamówienia</label>
            </div>
            <div class="col-md-7">
                <select class="form-control" id="Status" name="Status" value="@Model.Status">
                    <option @(Model.Status == "Nowe"? "selected": "") value="Nowe">Nowe</option>
                    <option @(Model.Status == "W trakcie realizacji" ? "selected": "") value="W trakcie realizacji">W trakcie realizacji</option>
                    <option @(Model.Status == "Zrealizowane" ? "selected": "") value="Zrealizowane">Zrealizowane</option>
                    <option @(Model.Status == "Anulowane" ? "selected": "") value="Anulowane">Anulowane</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-7">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót do listy zamóień", "IndexAdmin", null, new { @class = "btn btn-primary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
