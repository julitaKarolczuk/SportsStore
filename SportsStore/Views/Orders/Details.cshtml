@model SportsStore.Models.Order

<h2>Szczegóły zamówienia z dnia: xxxxx</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Payment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Payment)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Shipment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Shipment)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

    </dl>
    <table>
        <tr>
            <td>
                obrazek
            </td>
            <td>
                Nazwa
            </td>
            <td>
                Ilość
            </td>
            <td>
                Cena
            </td>
        </tr>
        @foreach (var productOrder in Model.Order_Product)
        {
            <tr>
                <td>
                    <img class="productImg" src="@Url.Content(@productOrder.Product.Picture)" />
                </td>
                <td>
                    @productOrder.Product.Name
                </td>
                <td>
                    @productOrder.Amount
                </td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Powrót do listy zamówień", "Index")
</p>
