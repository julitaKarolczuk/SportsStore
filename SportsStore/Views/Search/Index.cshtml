@model IEnumerable<SportsStore.Models.Product>
@{
    ViewBag.Title = "Wyniki wyszukiwania";
}
<head>
    <link href="~/Content/MainLayout.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Acme|Antic+Slab|Boogaloo|Josefin+Sans:400,700,700i|Kavivanar|Poppins:400,600,600i,700,700i|Raleway:400,600,600i,700,700i,800,800i" rel="stylesheet">
</head>

<h2 style="font-family: Poppins; font-weight:700; text-align: center;">Wyniki wyszukiwania</h2>

@Html.ActionLink("Przejdź do wyszukiwania zaawansowanego", "Advanced", "Search", null, new { @class = "btn btn-primary", @style = "margin-bottom:20px" })

<table class="table table-bordered">
    <tr>
        <th>
            Nazwa
        </th>
        <th>
            Cena
        </th>
        <th>
            Zdjęcie
        </th>
        <th>
            Producent
        </th>
        <th>
            Krótki opis
        </th>
        <th>
            Kategoria
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img class="productImg" src="@Url.Content(item.Picture)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.ActionLink("Szczegóły", "Details", "Products", new { id = item.Id }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }
</table>